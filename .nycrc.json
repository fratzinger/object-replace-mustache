{
  "extends": "@istanbuljs/nyc-config-typescript",
  "cache": false,
  "check-coverage": true,
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/types.ts"
  ],
  "reporter": [
    "html",
    "text",
    "text-summary",
    "lcov"
  ],
  "sourceMap": true,
  "all": true,
  "instrument": true,
  "watermarks": {
    "statements": [75, 90],
    "lines": [75, 90],
    "functions": [75, 90],
    "branches": [75, 90]
  }
}